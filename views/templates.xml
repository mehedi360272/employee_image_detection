<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the form view of employee.image -->
    <record id="view_employee_image_form_inherit" model="ir.ui.view">
        <field name="name">employee.image.form.inherit</field>
        <field name="model">employee.image</field>
        <field name="inherit_id" ref="employee_image_detection.view_employee_image_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="o_custom_button_container" style="margin-top: 10px;">
                    <button class="btn btn-primary o_custom_button">
                        Custom Button
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>